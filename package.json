{
  "name": "n2p-i2-docs",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "serve": "http-server --port=8080 --cors=*",
    "postserve": "pkill -f http-server",
    "publish:gh": "ts-node ./scripts/publish-gh-pages.ts",
    "publish:prod": "yarn build && yarn publish:gh",
    "build:spec": "ts-node ./scripts/build-spec.ts",
    "build": "yarn build:apis && yarn build:webhooks",
    "build:apis": "yarn build:spec apis",
    "build:webhooks": "yarn build:spec webhooks",
    "start": "yarn serve & yarn watch",
    "start:apis": "yarn serve & yarn watch:apis",
    "watch": "yarn watch:apis & yarn watch:webhooks",
    "watch:apis": "nodemon --config .config/nodemon.apis.json",
    "watch:webhooks": "nodemon --config .config/nodemon.webhooks.json",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^14.14.37",
    "@types/shelljs": "^0.8.8",
    "chalk": "^4.1.0",
    "gh-pages": "^3.2.3",
    "http-server": "^0.12.3",
    "husky": "^6.0.0",
    "js-yaml": "^4.0.0",
    "nodemon": "^2.0.7",
    "shelljs": "^0.8.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
